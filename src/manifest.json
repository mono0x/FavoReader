{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "version": "0.0.9",
  "description": "__MSG_description__",
  "default_locale": "ja",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "chrome_ex_oauth.html"
  ],
  "background": {
    "scripts": [
      "lib/analytics.js",
      "lib/chrome_ex_oauthsimple.js",
      "lib/chrome_ex_oauth.js",
      "lib/background.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "https://api.twitter.com/1/favorites/create/*.json",
    "https://twitter.com/oauth/request_token",
    "https://twitter.com/oauth/access_token",
    "https://twitter.com/oauth/authorize"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://reader.livedoor.com/reader/",
        "http://www.fastladder.com/reader/"
      ],
      "js": [ "content_scripts/livedoor_reader.js" ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://www.google.com/reader/*",
        "http://www.google.co.jp/reader/*",
        "https://www.google.com/reader/*",
        "https://www.google.co.jp/reader/*"
      ],
      "js": [ "content_scripts/google_reader.js" ],
      "run_at": "document_end"
    }
  ],
  "update_url": "http://monoweb.info/chrome/extension/favoreader/updates.xml"
}
